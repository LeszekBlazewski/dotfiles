; 	Set discharging battery label
label-discharging = %percentage%%
; 	Set full battery label
label-full = %percentage%%
; 	Set battery icons for ramp
ramp-capacity-0 = ï‰„
ramp-capacity-1 = ï‰ƒ
ramp-capacity-2 = ï‰‚
ramp-capacity-3 = ï‰
ramp-capacity-4 = ï‰€
